#!/bin/sh
#
#

SCRIPT_NAME=/etc/init.d/syncserver
APP_PATH={{syncServerRailsDir}}
CONFIG_FILE={{syncServerThinConfig}}

case "$1" in
  start)
        cd $APP_PATH && RAILS_ENV="{{railsEnv}}" bundle exec thin start -C $CONFIG_FILE;
        ;;
  restart)
        cd $APP_PATH && RAILS_ENV="{{railsEnv}}" bundle exec thin restart -C $CONFIG_FILE --force;
        ;;
  *)
        echo "Usage: $SCRIPT_NAME {start|restart}" >&2
        exit 3
        ;;
esac

:

