<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Change your password</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
		<%= form_for(@user, method: 'POST', :url => url_for(:controller => 'profile', :action => 'index'), :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
		  
		  <div class="form-group">
		  	<%= f.label :password, "Current password", :class => "col-sm-4 control-label" %>
		    <div class="col-sm-8">
				<%= f.password_field :password, autocomplete: "off", :placeholder => "Current password", :class => "form-control" %>
		    </div>
		  </div>
		  
		  <div class="form-group">
		  	<%= f.label :password_new, "New password", :class => "col-sm-4 control-label" %>
		    <div class="col-sm-8">
				<%= f.password_field :password_new, autocomplete: "off", :placeholder => "New password", :class => "form-control" %>
		    </div>
		  </div>
		  
		  <div class="form-group">
		  	<%= f.label :password_new_confirmation, "New password confirmation", :class => "col-sm-4 control-label" %>
		    <div class="col-sm-8">
				<%= f.password_field :password_new_confirmation, autocomplete: "off", :placeholder => "New password confirmation", :class => "form-control" %>
		    </div>
		  </div>

		  <div class="form-group">
		    <div class="col-sm-offset-4 col-sm-8">
		      <%= f.submit "Update", :class => "btn btn-primary" %>
		    </div>
		  </div>

		<% end %>

    </div>
</div>

