<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Content provider <%= @content_provider.name %></h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
		        <dl class="dl-horizontal dl-horizontal-large">
                  <% @content_provider.attributes.each { |key, value| %>

		            <dt><%= key %></dt>
		            <dd><%= value %></dd>

                  <% } %>

                <dt>Users</dt>
                <dd><%= @content_provider.users.map{|u| u.email}.to_sentence %></dd>
		        </dl>

    </div>
</div>

<%= link_to 'Edit', edit_content_provider_path(@content_provider), class: 'btn btn-info btn-sm' %>
<%= link_to 'Back', content_providers_path, class: 'btn btn-info btn-sm' %>
